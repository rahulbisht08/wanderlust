                    <div class="card-img-overlay"></div>
                    
                    <div class="card-body">
                        <p class="card-text"><%=Listing.title %> <br> 
                            &#8377;<%=Listing.price%>/day

                        </p>
                        <br>
                        
                    </div>
                </div>
            </a>
                <% } %>

